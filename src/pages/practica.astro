---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";

import SandClock from "../components/svgs/SandClock.astro";
import CheckBox from "../components/svgs/CheckBox.astro";

import ItemPractice from "../components/ItemPractice.astro";
---

<BaseLayout title="¡A practicar!">
  <Header />
  <main class="wrapper">
    <h1>¡A practicar!</h1>
    <div class="categories">
      <div class="category category-1">
        <SandClock />
        <p class="bold">Pendiente</p>
      </div>
      <div class="category category-2">
        <CheckBox />
        <p class="bold">Terminado</p>
      </div>
    </div>

    <div class="list">
      <ItemPractice
        title_practice="Un día en la granja"
        description_practice="Fonemas b-d"
        id_practice={1}
      />

      <ItemPractice
        title_practice="Un día en la granja"
        description_practice="Fonemas b-d"
        id_practice={1}
      />

      <ItemPractice
        title_practice="Un día en la granja"
        description_practice="Fonemas b-d"
        id_practice={1}
      />

      <ItemPractice
        title_practice="Un día en la granja"
        description_practice="Fonemas b-d"
        id_practice={1}
      />
    </div>
  </main>
</BaseLayout>

<style></style>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48px 0px;
    gap: 2rem;
  }

  main .categories {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 4rem;
  }

  .categories .category {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 1rem 4rem;

    gap: 1rem;
    width: 320px;
  }

  .categories .category-1 {
    background-color: var(--tertiary-400);
  }

  .categories .category-2 {
    background-color: var(--primary-200);
  }

  .categories .category:hover {
    box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.25);
    cursor: pointer;
    z-index: 50;

    height: 4rem;
  }

  main .list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    width: 100%;
    justify-items: center;
  }
</style>
