<style>
  :global(html, body) {
    height: 100%;
  }

  :global(body) {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--Sky, #E1F8FF);
    background-image: url("/img/pacient-background.png");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .wrapper {
    height: 100%;
    display: flex;
    flex-direction: column;
