---
import Appointment from "./Appointment.astro";
import DashboardInfo from "./DashboardInfo.astro";
import Patients from "./Patients.astro";
---

<section>
  <div class="content">
    <h1 class="title">Dashboard</h1>
    <DashboardInfo />
    <Patients />
    <Appointment />
  </div>
</section>

<style>
  section {
    padding: var(--small-padding);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-radius: 1.5em;
    background-color: var(--primary-200);
    padding: var(--small-padding);
  }

  .title {
    font-size: 2.5em;
    text-transform: none;
    font-weight: 700;
    color: var(--primary-900);
  }
</style>
