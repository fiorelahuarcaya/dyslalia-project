---
import "../css/base.css";
import WomanFarmer from "./svgs/WomanFarmer.astro";

export interface Props {
  title_practice: string;
  description_practice: string;
  id_practice: number;
}

const { title_practice, description_practice, id_practice } = Astro.props;
---

<div class="item-practice">
  <WomanFarmer />
  <div class="text">
    <h3>{title_practice}</h3>
    <div class="descrption">
      {description_practice}
      <a href="" class="btn">Iniciar</a>
    </div>
  </div>
</div>

<style>
  .item-practice {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 2rem 4rem;
    gap: 1.5rem;
    width: 480px;

    color: var(--light);
    background-color: var(--primary-500);
    border-radius: 1rem;
  }

  .item-practice .text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    width: 100%;
  }

  .item-practice .text .descrption {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .text .descrption .btn{
    padding: .25rem 1rem;
    color: var(--primary-600);
    background-color: var(--light);
  }

</style>
